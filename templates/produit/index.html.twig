{% extends 'template.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.code }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>

                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">
                        <button type="button" class="btn btn-success">show</button></a>

                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">
                        <button type="button" class="btn btn-danger">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">
    <button type="button" class="btn btn-primary btn-lg">Create new</button></a>
{% endblock %}
